

<%= flash[:notice] %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
  <h2>User info</h2>
  <%= image_tag @user.get_image(100,100) %>
  <table class="table">
    <tbody>
      <tr>
      <th>name</th>
      <th><%= @user.name %></th>
      </tr>
      <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>

   <%= link_to edit_user_path(@user.id) do %>
    <div class="row"><div class="btn btn-outline-secondary btn-block" >
      <i class="fas fa-user-cog"></i></div>
     </div><% end %>

<h2>New book</h2>

<%= form_with model: Book.new, method: :post do |f| %>
        <div class="form-group">
        <label for="book_title">Title</label>
        <br><%= f.text_field :title %></br></div>
        <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <br><%= f.text_area :body %></br></div>
        <div class="form-group">
        <%= f.submit "Create Book", class: :"btn btn-success" %></div>
        <% end %>
  </div>

<div class="col-md-8 offset-md-1">

  <h2>Books</h2>

  <table class="table table-hover table-inverse">
    <thread>
        <tr>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
        </tr>
    </thread>
    <% @books.each do |book| %>
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(@user.id) do %>
          <%= image_tag @user.get_image(100,100)%>
          <% end %>
          </td>
        <td>
        <%= link_to book_path(book.id) do %>
        <%= book.title %>
        <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
  </div>
  </div>
  </div>
