    <h2>Books</h2>
<table class ="table table-hover table-inverse">
    <thread>
        <tr>
        <th></th>
        <th>Title</th>

        <th>Opinion</th>
        <th colspan="3"></th>
        </tr>
    </thread>
    <% Book.all.each do |book| %>
    <tbody>
    <tr>
      <td><%= link_to user_path(book.user) do %>
      <%= image_tag book.user.get_image(100,100) %> <% end %>
          </td>
      <td><%= link_to book_path(book.id) do %>
        <%= book.title %>
        <% end %></td>
