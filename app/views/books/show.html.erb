<%= flash[:notice] %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
  <h2>User info</h2>
  <%= image_tag @book.user.get_image(100,100) %>
  <table class="table">
    <tbody>
      <tr>
      <th>name</th>
      <th><%= @book.user.name %></th>
      </tr>
      <tr>
      <th>introduction</th>
      <th><%= @book.user.introduction %></th>
      </tr>
    </tbody>
  </table>




    <%= link_to edit_user_path(@user.id) do %>
    <div class="row"><div class="btn btn-outline-secondary btn-block" >
      <i class="fas fa-user-cog"></i></div>
     </div><% end %>

<h2 class="mt-3">New book</h2>

<%= form_with model: Book.new, method: :post do |f| %>
        <div class="form-group">
        <label for="book_title">Title</label>
        <br><%= f.text_field :title %></br></div>
        <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <br><%= f.text_area :body %></br></div>
        <div class="form-group">
        <%= f.submit "Create Book", class: "btn btn-success" %></div>
        <% end %>
  </div>

  <div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
<table class="table">
  <tr>
    <td><%= link_to user_path(@book.user) do %>
      <%= image_tag @book.user.get_image(100,100) %>
      <br><%= @book.user.name %></br><% end %>
    </td>
    <td>
     <td>
      <%= link_to book_path(@book) do %>
      <%= @book.title %>
      <% end %>
    </td>
    <td>
      <%= @book.body %>
    </td>
    <td><% if @book.user == current_user %>
        <%= link_to edit_book_path(@book) do %><div class="btn btn-sm btn-success" >Edit</div><% end %><% end %>
    </td>
    <td>
      <% if @book.user == current_user %>
        <%= link_to book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" do %><div class="btn btn-sm btn-danger">Destroy</div><% end %><% end %>
    </td>
  </tr>
</table>
</div>
</div>
</div>