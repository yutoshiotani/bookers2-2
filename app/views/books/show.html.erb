<p id=”notice”></p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="mt-3">
  <h2>User info</h2>
  <%= image_tag @book.user.get_profile_image(100,100) %>
  <table class="table">
    <tbody>
      <tr>
      <th>name</th>
      <th><%= @book.user.name %></th>
      </tr>
      <tr>
      <th>introduction</th>
      <th><%= @book.user.introduction %></th>
      </tr>
    </tbody>
  </table>
  
    
    <div> <i class="fa-solid fa-user-gear"></i>
      <%= link_to "Edit", edit_user_path(current_user.id) %>
     </div>  
    
    
<h2>New book</h2>

<%= form_with model: Book.new, method: :post do |f| %>
        <div class="form-group">
        <label for="book_title">Title</label>
        <br><%= f.text_field :title %></br></div>
        <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <br><%= f.text_area :body %></br></div>
        <div class="form-group">
        <%= f.submit 'Create Book' %></div>
        <% end %>
  </div>
  
  <div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
<table class="table">
  <tr>
    <td><%= link_to user_path(@book.user) do %>
      <%= image_tag @book.user.get_profile_image(100,100) %><% end %>
    </td>
    <td>
     <td>
        
      <%= @book.title %>

    </td>
    <td>
      <%= @book.body %>
    </td>
    <td>
       <% if @book.user == current_user %>
        <%= link_to "Edit", edit_book_path(@book) %><% end %>
    </td>
    <td>
      <% if @book.user == current_user %>
        <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %><% end %>
    </td>
  </tr>
</table>
